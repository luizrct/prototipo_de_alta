<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity6">

    <!-- Título -->

    <!-- Formulário de Pesquisa -->

    <!-- Últimas Reservas -->
    <TextView
        android:id="@+id/textViewLastReservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Últimas reservas"
        android:textSize="30sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <!-- Mensagem de Sem Reservas -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLastReservations"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:elevation="8dp"
        app:cardCornerRadius="28dp"
        android:background="@color/background_color">

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/CorPrincipal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pesquisa"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:onClick="irParaPesquisa"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_reservas"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:onClick="irParaReservas"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/ic_calendario"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="87dp"
        android:text="Ainda não há reservas"
        android:textColor="@color/text_color"
        android:textSize="24sp"></TextView>
</RelativeLayout>
